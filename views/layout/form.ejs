<% let action = formAction === "UPDATE" ? `/update/${book.id}?_method=PUT`:'/books';
 let type = formAction === "UPDATE" ? "text": "hidden" ;
 let button = formAction === "UPDATE" ? "Update details": "Add to my Shelfbook";
 let url = formAction === "UPDATE" ? "" : `${book.image_url}`;
 let title = formAction === "UPDATE" ?  "" : `${book.title}`;
 let author = formAction === "UPDATE" ? "" : `${book.author}`;
 let description = formAction === "UPDATE" ? "" : `${book.description}`;
 %>

<form action="<%=action%>" method="POST">
    <input type="<%=type%>" name="img" value="<%=book.image_url%>" placeholder="<%=book.image_url%>"/><img src="<%=url%>">
    <input type="<%=type%>" name="title" value="<%=book.title%>" placeholder="<%=book.title%>"/><p><%=title%></p>
    <input type="<%=type%>" name="author" value="<%=book.author%>" placeholder="<%=book.author%>"/><p><%=author%></p>
    <input type="<%=type%>" name="description" value="<%=book.description%>" placeholder="<%=book.description%>"/><p><%=description%></p>
    <input type="<%=type%>" name="isbn" value="<%=book.isbn%>" placeholder="<%=book.isbn%>"/>
    <button type="submit"><%=button%></button>
</form>